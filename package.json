{
  "name": "wallex",
  "version": "0.1.0",
  "description": "JavaScript Client for Wallex Exchange API",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wallexchange/wallex-js.git"
  },
  "keywords": [
    "wallex",
    "api-client"
  ],
  "author": "Ali AslRousta <a.rousta@phinix.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wallexchange/wallex-js/issues"
  },
  "homepage": "https://github.com/wallexchange/wallex-js#readme",
  "files": [
    "lib/**/*"
  ],
  "devDependencies": {
    "prettier": "^2.7.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.7.4"
  }
}
